<div>
  <div class="flex w-full" id="contectme">
    <form
      name="contect"
      action="post"
      class="flex flex-col mx-auto lg:w-1/3 lg:p-10 space-y-5"
      method="POST"
      data-netlify="true"
    >
      <input type="hidden" name="form-name" value="contact" />

      <input
        type="text"
        name="name"
        id="name"
        class="outline-none border-2 border-orange-500 text-lg font-semibold text-[#1b1b1b] rounded-md py-1 px-2"
        placeholder="Name"
        required
      />
      <input
        type="email"
        name="name"
        id="name"
        class="outline-none border-2 border-orange-500 text-lg font-semibold text-[#1b1b1b] rounded-md py-1 px-2"
        placeholder="Email"
        required
      />
      <textarea
        name="meassage"
        id=""
        class="outline-none border-2 border-orange-500 text-lg font-semibold text-[#1b1b1b] rounded-md py-1 px-2"
        placeholder="Message"></textarea>
      <input
        type="submit"
        class="outline-none border-2 text-[#1b1b1b] text-xl font-bold rounded-md py-1 px-2 cursor-pointer bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500"
        value="Submit "
      />
    </form>
  </div>
</div>
